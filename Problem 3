#include <iostream>

using namespace std;

int main()
{
    char arr[35];
    int v;
    
    cout << "Please Enter the array size: ";
	cin >> v;

    for (int i = 0; i < v; i++)
    {
        cout << "\nPlease enter a character: ";
        cin >> arr[i];
    }

    for (int i = v; i >= 0; i--)
    {
        cout << arr[i];
    }

	_getch();
    return 0;
}

